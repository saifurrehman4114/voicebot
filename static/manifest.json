  "shortcuts": [
    {
      "name": "New Conversation",
      "short_name": "New Chat",
      "description": "Start a new conversation with AI",
      "url": "/chat/?new=true",
      "icons": [
        {
          "src": "/static/icons/shortcut-new-chat.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Calendar",
      "short_name": "Calendar",
      "description": "View and manage appointments",
      "url": "/calendar/",
      "icons": [
        {
          "src": "/static/icons/shortcut-calendar.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "categories": ["productivity", "utilities", "business"],
  "screenshots": [
    {
      "src": "/static/screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Main chat interface"
    },
    {
      "src": "/static/screenshots/screenshot2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Calendar view"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/chat/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        },
        {
          "name": "attachment",
          "accept": ["image/*", "application/pdf", ".doc", ".docx"]
        }
      ]
    }
  }
}
